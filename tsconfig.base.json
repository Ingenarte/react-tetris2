{
  "compilerOptions": {
    /* 1. Transform target & modules */
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": "./src",

    /* 2. Strictness flags */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* 3. Interop for CommonJS & default imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* 4. Output defaults (overridden in other configs) */
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    /* 5. Standard lib runtime */
    "lib": ["ES2019", "dom"],

    /* 6. Skip deep type‚Äêchecks in node_modules */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "test",
    "vite.config.ts",
    ".storybook",
    "storybook-static"
  ]
}