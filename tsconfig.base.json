{
  "compilerOptions": {
    /* Core settings */
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": "./src",

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Output (overridden in extended configs) */
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    /* Which libs & types to include */
    "lib": ["ES2019", "dom"],
    "types": ["node", "styled-components"],

    /* Skip type-checking inside node_modules */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules", "dist", "lib", "test", "src/app", "vite.config.ts"]
}