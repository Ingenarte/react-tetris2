{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Build mode: emit into dist/, including types and maps */
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "index.d.ts"],
  "exclude": ["**/*.stories.*", "**/*.test.*", "**/__tests__/**"]
}
